#include <stdio.h>
#include <stdlib.h>
#include <windows.h>

void clearConsole() {
    system("cls");
}

int main() {
    int i=0;
    while(1){
        if(i==0){
            clearConsole();
            printf("|");
            i=1;
        }
        Sleep(100);
        if(i==1){
            clearConsole();
            printf("/");
            i=2;
        }
        Sleep(100);
        if(i==2){
            clearConsole();
            printf("-");
            i=3;
        }
        Sleep(100);
        if(i==3){
            clearConsole();
            printf("\\");
            i=0;
        }
        Sleep(100);
    }
    return 0;
}
