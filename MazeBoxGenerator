#include<stdio.h>
#include <windows.h>

int main(){

  int height,width;

  printf("Enter height of the maze: ");
  scanf("%d",&height);

  printf("Enter width of the maze: ");
  scanf("%d",&width);
  
  for(int i=0;i<width;i++){
    printf(" __");
    Sleep(50);
  }

  printf("\n");
  
  for(int i=0;i<height;i++){

    for(int j=0;j<width;j++){
    
      printf("|__");
      Sleep(50);
    
      if(j==width-1){
        printf("|");
      }
    
    }
    
    printf("\n");
  
  }
  
  return 0;

}
